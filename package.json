{
  "name": "invis",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development binode --require ./mocks -- next:next dev",
    "build": "next build",
    "start": "next start",
    "start:mocks": "binode --require ./mocks -- next:next start",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate",
    "db:setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "lint": "next lint",
    "install:clean": "rm -rf node_modules && rm package-lock.json && npm i",
    "format": "prettier --write .",
    "test": "vitest",
    "typecheck": "tsc -b",
    "design-system:sync": "npm run design-system:tokenize && npm run design-system:codegen",
    "design-system:tokenize": "figmage tokenize --env .env.figma",
    "design-system:codegen": "figmage codegen --env .env.figma"
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "4.0.0",
    "@react-aria/button": "3.5.1",
    "@react-aria/focus": "3.6.1",
    "@stitches/react": "1.2.8",
    "cookie": "0.5.0",
    "framer-motion": "6.5.1",
    "next": "12.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-merge-refs": "2.0.1",
    "swr": "1.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.3.0",
    "@testing-library/dom": "8.16.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "14.2.3",
    "@types/eslint": "8.4.5",
    "@types/node": "18.0.6",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.0.0",
    "binode": "1.0.5",
    "c8": "7.11.3",
    "cross-env": "7.0.3",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.2",
    "eslint-config-prettier": "8.5.0",
    "figmage": "0.8.1",
    "happy-dom": "6.0.3",
    "msw": "0.44.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prisma": "4.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4",
    "vite": "3.0.2",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "0.18.1"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "node --require tsconfig-paths/register prisma/seed.js"
  },
  "figmage": {
    "outDir": "tokens",
    "tokenize": {
      "tokens": [
        {
          "name": "colors",
          "type": "color"
        },
        {
          "name": "typography",
          "type": "text"
        },
        {
          "name": "spacing",
          "type": "width",
          "nodeId": "22:582"
        },
        {
          "name": "radii",
          "type": "radius",
          "nodeId": "22:641"
        },
        {
          "name": "icons",
          "type": "svg",
          "nodeId": "1:1887"
        }
      ]
    },
    "codegen": {
      "defaults": {
        "filetype": "ts",
        "tokenCase": "camel"
      },
      "icons": {
        "filetype": "svg",
        "filename": "icon-sprite",
        "sprite": {
          "writeIds": true,
          "spriteDir": "public"
        }
      }
    }
  }
}
